    "vscode": {
      "extensions": [
        "nvarner.typst-lsp",
        "mgt19937.typst-preview",
        "CalebFiggers.typst-companion",
        "tomoki1207.pdf"
      ]
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.

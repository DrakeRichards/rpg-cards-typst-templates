{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch character landscape",
      "type": "shell",
      "command": "typst",
      "args": [
        "watch",
        "${workspaceFolder}/src/cards/character/landscape.typ",
        "${workspaceFolder}/out/character-landscape.pdf",
        "--root",
        "./"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "revealProblems": "onProblem"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "watch character portrait",
      "type": "shell",
      "command": "typst",
      "args": [
        "watch",
        "${workspaceFolder}/src/cards/character/portrait.typ",
        "${workspaceFolder}/out/character-portrait.pdf",
        "--root",
        "./"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "revealProblems": "onProblem"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "compile",
      "type": "shell",
      "command": "typst",
      "args": [
        "compile",
        "${workspaceFolder}/src/cards/character/landscape.typ",
        "${workspaceFolder}/character-landscape.pdf",
        "--root",
        "./"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
